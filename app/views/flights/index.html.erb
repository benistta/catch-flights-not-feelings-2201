<% @flights.each do |flight| %>
  <div id='flight-<%="#{flight.id}"%>'>
    <%= flight.number%>
    <%= flight.airline.name %>
    <% flight.passengers.each do |passenger| %>
    <%=  passenger.name %>
    <% end %>
    <% flight.passengers.each do |passenger| %>
    <%= button_to "Delete #{passenger.name}", "/passengers/#{passenger.id}/flights", method: :delete %>
    <% end %>
  </div>
  <% end %>
